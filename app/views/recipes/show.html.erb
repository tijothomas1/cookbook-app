<h1><%= @recipe.title %></h1>
<h2>By: <%= @recipe.chef %></h2>
<h4>Updated on: <%= @recipe.friendly_updated_at %></h4>

<h3>Prep Time: <%= @recipe.friendly_preptime %></h3>

<h3>Ingredients:</h3>
<ul>
  <% @ingredient_list.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>

<h3>Directions:</h3>
<ol>
  <% @directions_list.each do |step| %>
    <li><%= step %></li>
  <% end %>
</ol>
<%= image_tag @recipe.image %>

<%= link_to "Home", "/" %>
<%= link_to "Edit", "/recipes/#{@recipe.id}/edit" %>
<%= link_to "Delete", "/recipes/#{@recipe.id}", method: :delete, data:{confirm: "Are you sure?"} %>